<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appcolor"
    android:orientation="vertical"
    tools:context=".Billing_Entry">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:background="@drawable/textview_sty_grey">
        <TextView
            android:id="@+id/tv_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing   \nInvoice   "
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_assignment_white_24dp"
            android:drawablePadding="10dp"
            android:textSize="25dp"
            android:elevation="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_sty"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical|right">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/rupee">
                </ImageView>
                <EditText
                    android:id="@+id/et_TotalInvoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:clickable="false"
                    android:enabled="false"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:inputType="number"
                    android:maxLength="7">
                </EditText>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="3dp"
                android:background="@color/grey_light"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_cgst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CGST(9%):"
                        android:textSize="11dp"></TextView>
                    <TextView
                        android:id="@+id/tv_sgst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SGST(9%):"
                        android:textSize="11dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_totalexgst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL:"
                        android:textSize="11dp"></TextView>
                    <TextView
                        android:id="@+id/tv_Extras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extras :"
                        android:textSize="11dp"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            >

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <EditText
                        android:id="@+id/et_CustName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Customer Name:"
                        android:maxLength="32"
                        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                        android:inputType="textCapSentences"
                        android:drawablePadding="10dp"
                        android:background="@drawable/editext_sty"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:layout_margin="5dp"
                        >

                    </EditText>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/et_place"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="Place"
                            android:maxLength="20"
                            android:drawableRight="@drawable/ic_location_on_black_24dp"
                            android:inputType="textCapSentences"
                            android:background="@drawable/editext_sty"
                            android:padding="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1">
                        </EditText>
                        <EditText
                            android:id="@+id/et_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:background="@drawable/editext_sty"
                            android:drawableRight="@drawable/ic_contacts_black_24dp"
                            android:padding="10dp"
                            android:maxLength="10"
                            android:layout_marginLeft="5dp"
                            android:hint="Phone">
                        </EditText>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editext_sty"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="5dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/gst_icon">
                        </ImageView>
                        <EditText
                            android:id="@+id/et_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter GST Number"
                            android:background="@null"
                            android:inputType="textCapSentences"
                            >
                        </EditText>
                    </LinearLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="20dp"
                android:elevation="5dp"
                app:cardCornerRadius="15sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="40"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Particulars"
                        android:textStyle="bold"
                        android:padding="5dp"

                        android:textColor="@color/black"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="18"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Feets"
                        android:textStyle="bold"
                        android:padding="5dp"

                        android:textColor="@color/black"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="22"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Rates"
                        android:textStyle="bold"
                        android:padding="5dp"

                        android:textColor="@color/black"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="22"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Amount"
                        android:textStyle="bold"
                        android:padding="5dp"

                        android:textColor="@color/black"></TextView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                app:cardCornerRadius="15sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_Quotation"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="98"/>
                    <LinearLayout
                        android:id="@+id/addquote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/textview_sty_grey"
                        android:gravity="left"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="+Add"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:visibility="gone"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                app:cardCornerRadius="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7'"
                                android:textSize="15dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <EditText
                                android:id="@+id/et_seveninchpipes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_marginLeft="5dp"
                                android:hint="sudhakar pipes"
                                android:background="@drawable/editext_sty"
                                android:textColor="@color/black"></EditText>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Per Ft"
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount:"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <EditText
                                android:id="@+id/et_seveninchpipesamount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_marginLeft="5dp"
                                android:hint="0.00"
                                android:inputType="number"
                                android:background="@drawable/editext_sty"
                                android:textColor="@color/black"></EditText>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10'"
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <EditText
                                android:id="@+id/et_teninchpipes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_marginLeft="5dp"
                                android:hint="sudhakar pipes"
                                android:background="@drawable/editext_sty"
                                android:textColor="@color/black"></EditText>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Per Ft"
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount:"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <EditText
                                android:id="@+id/et_teninchpipesamount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_marginLeft="5dp"
                                android:hint="0.00"
                                android:inputType="number"
                                android:background="@drawable/editext_sty"
                                android:textColor="@color/black"></EditText>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flushing 6 1\\2' Bore Wells Per Ft "
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount:"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <EditText
                                android:id="@+id/et_flushingamount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_marginLeft="5dp"
                                android:hint="0.00"
                                android:inputType="number"
                                android:background="@drawable/editext_sty"
                                android:textColor="@color/black"></EditText>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transport and Labour Charges"
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount:"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <EditText
                                android:id="@+id/et_labourandtransportamount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_marginLeft="5dp"
                                android:hint="0.00"
                                android:inputType="number"
                                android:background="@drawable/editext_sty"
                                android:textColor="@color/black"></EditText>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10' Bit Collapse Drill Charge"
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount:"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <EditText
                                android:id="@+id/et_collapse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_marginLeft="5dp"
                                android:hint="0.00"
                                android:inputType="number"
                                android:background="@drawable/editext_sty"
                                android:textColor="@color/black"></EditText>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/ll_quotationswipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview_sty_blue"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="  Proceed  "
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>